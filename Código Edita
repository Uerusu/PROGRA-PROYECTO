package javaapplication11;
import java.util.Scanner;
import java.util.ArrayList;




public class JavaApplication11 {
    static ArrayList<String> cantidad = new ArrayList<>();
    static String Usuariocorrecto = "admin";
    static String Contraseña = "admin";
    static Scanner entrada= new Scanner (System.in);
    static int opcion;
    static  int posicion, nuevo;
    static ArrayList<String> articulos = new ArrayList();
    static ArrayList<Integer> cantidad2 = new ArrayList();
    static ArrayList<Integer> cantidad3 = new ArrayList();
    static ArrayList<String> categoria =new ArrayList();
    static int cantidad_articulos,cantidad_articulos2;
    static String nombre,cate;
    public static void main(String[] args) {
    iniciosesion();
    do{
        menu();
        } while (opcion !=0);
    }
    
    public static void iniciosesion (){
        System.out.println("------INICIO DE SESION------");
        System.out.println("Ingrese el usuario");
        String usuingr = entrada.nextLine();
        System.out.println("Ingrese la contraseña");
        String contraingr = entrada.nextLine();
        if (usuingr.equals(Usuariocorrecto) && contraingr.equals(Contraseña)) {
            System.out.println("Inicio de sesion exitoso");
        }else{
            System.out.println("Usuario o contraseña incorrectos");
        }
    }
    
    static void articulo(){
     System.out.println("Ingrese cuantos articulos ingresara");
     cantidad_articulos = entrada.nextInt();
     entrada.nextLine();
     for (int i = 1; i < cantidad_articulos+1; i++) {entrada.nextLine();
         System.out.println("Ingrese el nombre del articulo " + i);
         nombre=entrada.nextLine();
         articulos.add(nombre);
         System.out.println("Ingrese la categoria del producto " +i);
         cate=entrada.nextLine();
         categoria.add(cate);
         System.out.println("Ingrese la cantidad de articulos " +i);
         cantidad_articulos2=entrada.nextInt();
         cantidad2.add(cantidad_articulos2);
         }
        System.out.println("Los articulos son: " +articulos);
        System.out.println("Las categorias son: " +categoria);
        System.out.println("Las cantidades son: " +cantidad2);
    }
    static void eliminar(){
      String eliminar2;
       System.out.println("Ingrese el nombre del producto que desea eliminar");
       eliminar2 = entrada.nextLine();
       articulos.remove(eliminar2);
    }
    
    public static void menu (){
        System.out.println("===== Sistema de Inventario =====");
        System.out.println("1. Ingresar productos al inventario");
        System.out.println("2. Retirar productos del inventario");
        System.out.println("3. Mostrar alertas de inventario");
        System.out.println("4. Mostrar costo del inventario");
        System.out.println("5. Mostrar historial de movimientos");
        System.out.println("0. Salir");
        System.out.print("Seleccione una opción: ");
        opcion = entrada.nextInt();
        switch (opcion){
            case 1: 
                articulo();
                break;
            
            case 2: 
                eliminar();
                break;  
            
            case 3: 
                
                break;
        
            case 4: 
                
                break;
            
            case 5: 
                
                break;
            
            case 0: 
                System.out.println("Cerrando Programa");
                break;
            
            }
        }
}
